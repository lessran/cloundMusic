body,html
  line-height: 1
  font-weight: 200
  margin: 0
  padding: 0
  font-family: 'PingFang SC','STHeitiSC-Light',
  'Helvetica-Light',sans-serif
ul,li,h1
  padding: 0
  margin: 0
.clearfix
  display: inline-block
  &:after
    display:block
    content: ''
    height: 0
    line-height: 0
    clear: both
    visibility: hidden
@media (-webkit-min-device-pixel-radio: 1.5),(min-device-pixel-radio: 1.5)
  .border-1px
    &::after
      -webkit-transform: scaleY (0.7)
      transform: scaleY (0.7)
@media (-webkit-min-device-pixel-radio: 2),(min-device-pixel-radio: 2)
  .border-1px
    &::after
      -webkit-transform: scaleY (0.5)
      transform: scaleY (0.5)
@media (-webkit-min-device-pixel-radio: 3),(min-device-pixel-radio: 3)
  .border-1px
    &::after
      -webkit-transform: scaleY (0.33)
      transform: scaleY (0.33)